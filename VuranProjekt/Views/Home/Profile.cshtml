@using Model

@model AppUser

@{
	ViewData["Title"] = "Profile";
}


@if (Model != null)
{


	<div>
		<h4>Profile</h4>
		<hr />
		<dl class="dl-horizontal">
			<dt>
				ID
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Id)
			</dd>
			<dt>
				Full name
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Name)
			</dd>
			<dt>
				Email
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Email)
			</dd>
			<dt>
				About
			</dt>
			<dd>
				@Html.DisplayFor(model => model.About)
			</dd>
			
		
		</dl>

		<div>
			<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit info</a>
		</div>

	</div>

	
		<input type="hidden" asp-for="Id" />
	<partial name="_TagsPartial" model="Model.TagsCreated?.ToList() ?? new List<Model.Tag>()" />
	
}


